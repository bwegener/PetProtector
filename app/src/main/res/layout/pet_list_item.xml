<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/petListLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:onClick="viewPetDetails"
    >

    <ImageView
        android:id="@+id/petListIV"
        android:layout_width="@dimen/image_list_item_width"
        android:layout_height="@dimen/image_list_item_height"
        android:layout_margin="@dimen/image_list_item_margins"
        android:contentDescription="@string/photo"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/layout_text_views_margins"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/petListNameTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_marginBottom="@dimen/text_view_list_item_buffer"
            android:textColor="@color/dark_blue"
            />

        <TextView
            android:id="@+id/petListDetailsTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/pale_blue"
            />



    </LinearLayout>

</LinearLayout>